{
  "name": "maeum-pet-store",
  "version": "0.1.0",
  "description": "Delicious fastify.js boilerplate",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "artifact": "just --config ./.configs/just.config.ts artifact",
    "thin-artifact": "just --config ./.configs/just.config.ts thin-artifact",
    "rs": "run-p route nozzle-refresh",
    "build": "npm run clean && tsc --project ./tsconfig.json  --incremental",
    "bundle": "npm run clean && cross-env FORMAT=cjs node .configs/esbuild.mjs",
    "clean": "rimraf dist",
    "dev": "nodemon --config ./.configs/nodemon.json",
    "debug": "cross-env DEBUG=maeum:* ENV_APPLICATION_LOG_LEVEL=debug TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r src/loader --inspect-brk --nolazy src/listen.ts",
    "lint": "eslint --cache .",
    "lint-staged": "lint-staged",
    "prettier": "just --config ./.configs/just.config.ts prettier",
    "lnb": "concurrently \"npm run build\" \"npm run lint\"",
    "route": "cross-env NODE_ENV=production fast-maker route --config .configs/.fastmakerrc",
    "start:withoutpm2": "TZ=Asia/Seoul node --enable-source-maps -r ./dist/loader dist/listen.js",
    "start": "TZ=Asia/Seoul ./node_modules/pm2/bin/pm2-runtime -s start .configs/pm2.config.js > /dev/null",
    "test": "cross-env DEBUG=maeum:* RUN_ON_TESTCASE=true node -r ts-node/register ./node_modules/.bin/jest --detectOpenHandles",
    "typeorm": "ts-node -r tsconfig-paths/register -r src/loader ./node_modules/typeorm/cli.js",
    "nozzle": "nozzle -c .configs/.nozzlerc",
    "nozzle-refresh": "nozzle -c ./.configs/.nozzlerc refresh",
    "dd": "deps-diff md -d prod -d dev --title-list-type 'm' --deps-list-type 'm' --content-list-type 'm'",
    "uid": "node scripts/uuid.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maeumjs/maeum-pet-store.git"
  },
  "author": "ByungJoon Lee",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/archiver": "^6.0.1",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.3",
    "@types/node-polyglot": "^2.4.5",
    "@types/shelljs": "^0.8.15",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "archiver": "^6.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.2",
    "esbuild": "^0.19.5",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "execa": "^5.1.1",
    "fast-maker": "^3.2.1",
    "figlet": "^1.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.5",
    "schema-nozzle": "^0.24.0",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "@fastify/url-data": "^5.4.0",
    "@maeum/error-controller": "^2.2.0",
    "@maeum/i18n-controller": "^1.10.0",
    "@maeum/logging-controller": "^1.2.0",
    "@maeum/schema-controller": "^1.5.1",
    "@maeum/tools": "^1.3.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "fast-copy": "^3.0.1",
    "fast-safe-stringify": "^2.1.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.0",
    "http-status-codes": "^2.2.0",
    "jin-frame": "^3.12.1",
    "jsonc-parser": "^3.2.0",
    "my-easy-fp": "^0.21.0",
    "my-node-fp": "^0.9.0",
    "mysql2": "^3.6.3",
    "node-polyglot": "^2.5.0",
    "pm2": "^5.3.0",
    "type-fest": "^4.8.1",
    "typeorm": "^0.3.17",
    "url-naong": "^1.1.2",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --cache"
    ],
    "*.{js,jsx,ts,tsx},*.json,.{eslintrc.cjs,prettierrc}": [
      "cross-env NODE_ENV=production prettier --ignore-path .eslintignore --parser json --write"
    ]
  }
}
