{
  "watch": [
    "app.ts",
    "src/**/**.ts",
    "resources/configs/**/*.json",
    "resources/configs/**/*.env",
    "resources/locales/**/*.json",
    "!src/dto/**/*.ts"
  ],
  "exec": "ts-node -r tsconfig-paths/register --files --project tsconfig.json -r src/loader src/app.ts",
  "ext": "ts json env",
  "ignore": [
    "*.test.ts"
  ],
  "env": {
    "DEBUG": "maeum:*",
    "RUN_MODE": "local",
    "ENV_LOG_LEVEL": "debug",
    "NODE_ENV": "production"
  }
}
