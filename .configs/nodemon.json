{
  "watch": [
    "app.ts",
    "src/**/**.ts",
    "resources/configs/**/*.json",
    "resources/configs/**/*.env",
    "resources/locales/**/*.json",
    "!src/dto/**/*.ts"
  ],
  "exec": "tsx --tsconfig tsconfig.json --import src/loader.ts src/app.ts",
  "ext": "ts json env",
  "ignore": [
    "*.test.ts"
  ],
  "env": {
    "DEBUG": "maeum:*",
    "RUN_MODE": "local",
    "ENV_LOG_LEVEL": "debug",
    "NODE_ENV": "production"
  }
}
