{
  // database file directory or filename
  "output": "resources/configs/store.json",

  // tsconfig.json file path
  "project": "tsconfig.json",
  
  // use checkbox with multiple selections
  "multiple": true,

  "include": ["src/dto/**/*.ts", "src/configs/interfaces/*.ts"],

  // "rootDirs": ["src/dto", "src/configs/interfaces"],

  "cli-logo": true,

  "truncate": true,

  // ts-json-schema-generator option
  "generatorOption": {
    "additionalProperties": true,
    "extraTags": ["datetime-formatex", "example", "int64"]
  }
}
